#!/bin/bash

set -e

# Amazon Linux 2 packages Ansible separately, so enable the repo
. /etc/os-release
if [[ $ID == 'amzn' ]]; then
    amazon-linux-extras enable ansible2
fi

./bin/pacapt install --noconfirm \
             ansible \
             python-boto3 \
             python-botocore

if [[ $1 == "--dev" ]]; then
    ./bin/pacapt install --noconfirm \
                 python-dev python-pip

    pip install pipenv
    pipenv sync --dev
fi
