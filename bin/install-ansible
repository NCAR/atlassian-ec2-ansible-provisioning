#!/bin/bash

set -e

source /etc/os-release
if [[ $ID = "amzn" ]]; then
    amazon-linux-extras enable postgresql9.6
    yum install -y \
        postgresql \
        python3-devel \
        python3-pip \
        python2-boto3 \
        python2-botocore

else
    # FIXME: Currently assumes Debian-based
    apt-get update && \
    apt-get install -y \
            python3-dev \
            python3-pip
fi
export PATH=/usr/local/bin:$PATH

pip3 install pipenv
pipenv sync

if [[ $1 == "--dev" ]]; then
    pipenv sync --dev
fi
